                            StrokeThickness="2"
                            X="{Binding DomeInfo.Azimuth, UpdateSourceTrigger=PropertyChanged}">
                            <oxy:LineAnnotation.Color>
                                <MultiBinding Converter="{StaticResource TM_ColorAndBooleanToTransparentMultiBinding}">
                                    <Binding Source="{StaticResource DomeAzimuthColor}" />
                                    <Binding Path="DomeControlEnabled" />
                                </MultiBinding>
                            </oxy:LineAnnotation.Color>
                            <oxy:LineAnnotation.TextColor>
                                <MultiBinding Converter="{StaticResource TM_ColorAndBooleanToTransparentMultiBinding}">
                                    <Binding Source="{StaticResource DomeAzimuthTextColor}" />
                                    <Binding Path="DomeControlEnabled" />
                                </MultiBinding>
                            </oxy:LineAnnotation.TextColor>
                        </oxy:LineAnnotation>
                        <oxy:PointAnnotation
                            Shape="Plus"
                            Size="8"
                            Opacity="0.6"
                            Text="Dome Target"
                            X="{Binding NextUpDomePosition.X}"
                            Y="{Binding NextUpDomePosition.Y}">
                            <oxy:PointAnnotation.Stroke>
                                <MultiBinding Converter="{StaticResource TM_ColorAndBooleanToTransparentMultiBinding}">
                                    <Binding Source="{StaticResource NextUpDomeAzimuthColor}" />
                                    <Binding Path="ShowNextUpDomePosition" />
                                </MultiBinding>
                            </oxy:PointAnnotation.Stroke>
                            <oxy:PointAnnotation.TextColor>
                                <MultiBinding Converter="{StaticResource TM_ColorAndBooleanToTransparentMultiBinding}">
                                    <Binding Source="{StaticResource NextUpDomeAzimuthColor}" />
                                    <Binding Path="ShowNextUpDomePosition" />
                                </MultiBinding>
                            </oxy:PointAnnotation.TextColor>
                        </oxy:PointAnnotation>
                    </oxy:Plot.Annotations>
                </oxy:Plot>

                <Grid Grid.Row="1" Grid.Column="0" Margin="8,0,8,8" Visibility="{Binding AreMlptErrorChartsVisible, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,4"
                        Text="{Binding MaxMlptRaErrorArcsec, StringFormat=max RA Error {0:0.0} arcsec}" />
                    <oxy:Plot
                        Grid.Row="1"
                        MinWidth="300"
                        MinHeight="120"
                        Height="120"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Background="{StaticResource BackgroundBrush}"
                        PlotAreaBackground="{StaticResource BackgroundBrush}"
                        PlotAreaBorderColor="Transparent">
                        <oxy:Plot.Axes>
                            <oxy:LinearAxis
                                Position="Bottom"
                                Minimum="1"
                                Maximum="{Binding MlptPlannedImageCount}"
                                MajorStep="1"
                                MinorStep="1"
                                StringFormat="0"
                                IsPanEnabled="False"
                                IsZoomEnabled="False"
                                MajorGridlineStyle="LongDash"
                                MinorGridlineStyle="None"
                                TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TitleColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}"
                                AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                Title="Image #" />
                            <oxy:LinearAxis
                                Position="Left"
                                Minimum="{Binding MlptRaErrorAxisMinimumArcsec}"
                                Maximum="{Binding MlptRaErrorAxisLimitArcsec}"
                                IsPanEnabled="False"
                                IsZoomEnabled="False"
                                MajorGridlineStyle="LongDash"
                                MinorGridlineStyle="None"
                                TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TitleColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}"
                                AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"                                
                                Title="arcsec" />
                        </oxy:Plot.Axes>
                        <oxy:Plot.Series>
                            <oxy:LineSeries
                                ItemsSource="{Binding MlptRaErrorPoints}"
                                DataFieldX="X"
                                DataFieldY="Y"
                                MarkerType="Circle"
                                MarkerSize="3"
                                TrackerFormatString="{}Image #{X:0}&#x0a;RA Error: {Y:0.##} arcsec" />
                        </oxy:Plot.Series>
                        <oxy:Plot.Annotations>
                            <oxy:LineAnnotation
                                Type="Horizontal"
                                Y="0"
                                LineStyle="Solid"
                                StrokeThickness="1"
                                Color="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=70}" />
                        </oxy:Plot.Annotations>
                    </oxy:Plot>
                </Grid>

                <Grid Grid.Row="2" Grid.Column="0" Margin="8,0,8,8" Visibility="{Binding AreMlptErrorChartsVisible, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,4"
                        Text="{Binding MaxMlptDeErrorArcsec, StringFormat=max DE Error {0:0.0} arcsec}" />
                    <oxy:Plot
                        Grid.Row="1"
                        MinWidth="300"
                        MinHeight="120"
                        Height="120"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Background="{StaticResource BackgroundBrush}"
                        PlotAreaBackground="{StaticResource BackgroundBrush}"
                        PlotAreaBorderColor="Transparent">
                        <oxy:Plot.Axes>
                            <oxy:LinearAxis
                                Position="Bottom"
                                Minimum="1"
                                Maximum="{Binding MlptPlannedImageCount}"
                                MajorStep="1"
                                MinorStep="1"
                                StringFormat="0"
                                IsPanEnabled="False"
                                IsZoomEnabled="False"
                                MajorGridlineStyle="LongDash"
                                MinorGridlineStyle="None"
                                TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TitleColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}"
                                AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                Title="Image #" />
                            <oxy:LinearAxis
                                Position="Left"
                                Minimum="{Binding MlptDeErrorAxisMinimumArcsec}"
                                Maximum="{Binding MlptDeErrorAxisLimitArcsec}"
                                IsPanEnabled="False"
                                IsZoomEnabled="False"
                                MajorGridlineStyle="LongDash"
                                MinorGridlineStyle="None"
                                TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TitleColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}"
                                AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                Title="arcsec" />
                        </oxy:Plot.Axes>
                        <oxy:Plot.Series>
                            <oxy:LineSeries
                                ItemsSource="{Binding MlptDeErrorPoints}"
                                DataFieldX="X"
                                DataFieldY="Y"
                                MarkerType="Circle"
                                MarkerSize="3"
                                TrackerFormatString="{}Image #{X:0}&#x0a;DE Error: {Y:0.##} arcsec" />
                        </oxy:Plot.Series>
                        <oxy:Plot.Annotations>
                            <oxy:LineAnnotation
                                Type="Horizontal"
                                Y="0"
                                LineStyle="Solid"
                                StrokeThickness="1"
                                Color="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=70}" />
                        </oxy:Plot.Annotations>
                    </oxy:Plot>
                </Grid>

                <Grid Grid.Row="3" Grid.Column="0">
                    <oxy:Plot
                        Width="Auto"
                        MinWidth="300"
                        MinHeight="300"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="{StaticResource BackgroundBrush}"
                        PlotAreaBackground="{StaticResource BackgroundBrush}"
                        PlotAreaBorderColor="Transparent"
                        PlotType="Polar">
                    <oxy:Plot.Axes>
                        <oxy:MagnitudeAxis
                                Key="AltitudeAxis"
                                AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                EndPosition="1"
                                IntervalLength="9"
                                IsPanEnabled="False"
                                IsZoomEnabled="False"
                                MajorGridlineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=60}"
                                MajorGridlineStyle="LongDash"
                                MajorStep="30"
                                Maximum="90"
                                Minimum="0"
                                StartPosition="0"
                                TextColor="Transparent"
                                TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}" />
                        <oxy:AngleAxis
                                Key="AzimuthAxis"
                                AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                EndAngle="90"
                                EndPosition="1"
                                IntervalLength="15"
                            LabelFormatter="{Binding PolarAzimuthLabelFormatter}"
                                IsPanEnabled="False"
                                IsZoomEnabled="False"
                                MajorGridlineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=60}"
                                MajorGridlineStyle="LongDash"
                                MajorStep="30"
                                Maximum="360"
                                Minimum="0"
                                StartAngle="450"
                                StartPosition="0"
                                TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                                TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}" />
                    </oxy:Plot.Axes>
                    <oxy:Plot.Series>
                        <oxy:LineSeries
                            ItemsSource="{Binding MeridianPolarGuidePoints}"
                            DataFieldX="X"
                            DataFieldY="Y"
                            XAxisKey="AltitudeAxis"
                            YAxisKey="AzimuthAxis"
                            LineStyle="Solid"
                            StrokeThickness="2.5"
                            TrackerFormatString=""
                            Color="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=160}" />
                        <oxy:LineSeries
                            ItemsSource="{Binding MeridianOppositePolarGuidePoints}"
                            DataFieldX="X"
                            DataFieldY="Y"
                            XAxisKey="AltitudeAxis"
                            YAxisKey="AzimuthAxis"
                            LineStyle="Solid"
                            StrokeThickness="2.5"
                            TrackerFormatString=""
                            Color="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=160}" />
                        <oxy:LineSeries
                            ItemsSource="{Binding MeridianLimitWestCurvePointsPolar}"
                            DataFieldX="X"
                            DataFieldY="Y"
                            XAxisKey="AltitudeAxis"
                            YAxisKey="AzimuthAxis"
                            LineStyle="Dot"
                            StrokeThickness="2"
                            TrackerFormatString=""
                            Visibility="{Binding ShowMeridianLimitGuides, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}"
                            Color="#FFA500" />
                        <oxy:LineSeries
                            ItemsSource="{Binding MeridianLimitWestCurvePointsPolar2}"
                            DataFieldX="X"
                            DataFieldY="Y"
                            XAxisKey="AltitudeAxis"
                            YAxisKey="AzimuthAxis"
                            LineStyle="Dot"
                            StrokeThickness="2"
                            TrackerFormatString=""
                            Visibility="{Binding ShowMeridianLimitGuides, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}"
                            Color="#FFA500" />
                        <oxy:LineSeries
                            ItemsSource="{Binding MeridianLimitEastCurvePointsPolar}"
                            DataFieldX="X"
                            DataFieldY="Y"
                            XAxisKey="AltitudeAxis"
                            YAxisKey="AzimuthAxis"
                            LineStyle="Dot"
                            StrokeThickness="2"
                            TrackerFormatString=""
                            Visibility="{Binding ShowMeridianLimitGuides, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}"
                            Color="#FFA500" />
                        <oxy:LineSeries
                            ItemsSource="{Binding MeridianLimitEastCurvePointsPolar2}"
                            DataFieldX="X"
                            DataFieldY="Y"
                            XAxisKey="AltitudeAxis"
                            YAxisKey="AzimuthAxis"
                            LineStyle="Dot"
                            StrokeThickness="2"
                            TrackerFormatString=""
                            Visibility="{Binding ShowMeridianLimitGuides, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}"
                            Color="#FFA500" />
                        <oxy:AreaSeries
                            ItemsSource="{Binding HorizonDataPointsPolarArea}"
                            DataFieldX="X"
                            DataFieldY="Y"
                            DataFieldX2="X2"
                            DataFieldY2="Y2"
                            XAxisKey="AltitudeAxis"
                            YAxisKey="AzimuthAxis"
                            TrackerFormatString="Altitude: {2:0.00}&#176;&#x0a;Azimuth: {4:0.00}&#176;"
                            Visibility="{Binding ShowHorizon, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                            <oxy:AreaSeries.Color>
                                <MultiBinding Converter="{StaticResource TM_ColorAndBooleanToTransparentMultiBinding}">
                                    <Binding Path="Color" Source="{StaticResource ButtonBackgroundBrush}" />
                                    <Binding Path="ShowHorizon" />
                                    <Binding Path="HorizonTransparencyPercent" />
                                </MultiBinding>
                            </oxy:AreaSeries.Color>
                            <oxy:AreaSeries.Fill>
                                <MultiBinding Converter="{StaticResource TM_ColorAndBooleanToTransparentMultiBinding}">
                                    <Binding Path="Color" Source="{StaticResource ButtonBackgroundBrush}" />
                                    <Binding Path="ShowHorizon" />
                                    <Binding Path="HorizonTransparencyPercent" />
                                </MultiBinding>
                            </oxy:AreaSeries.Fill>
                        </oxy:AreaSeries>
                        <oxy:ScatterSeries
                                DataFieldX="InvertedAltitude"
                                DataFieldY="Azimuth"
                                ItemsSource="{Binding DisplayModelPoints, UpdateSourceTrigger=PropertyChanged}"
                                MarkerSize="{Binding ChartPointSize}"
                                MarkerType="Circle"
                                TrackerFormatString="{}Altitude: {Altitude:###.####}&#176;&#x0a;Azimuth: {Azimuth:###.####}&#176;&#x0a;RMS Error: {ErrorArcsec:###.##} arcsec"
                                XAxisKey="AltitudeAxis"
                                YAxisKey="AzimuthAxis" />
                            <oxy:LineSeries
                                ItemsSource="{Binding DisplayPathPointsPolar, UpdateSourceTrigger=PropertyChanged}"
                                DataFieldX="X"
                                DataFieldY="Y"
                                XAxisKey="AltitudeAxis"
                                YAxisKey="AzimuthAxis"
                                LineStyle="Dot"
                                StrokeThickness="1.5"
                                TrackerFormatString="" />
                    </oxy:Plot.Series>
                    <oxy:Plot.Annotations>
                        <oxy:PointAnnotation
         Stroke="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=60}"
         StrokeThickness="3"
         Shape="Cross"
         Size="8"
         Opacity="0.6"
         TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
         X="{Binding TelescopePositionInverted.Y}"
         Y="{Binding TelescopePositionInverted.X}" />
                    </oxy:Plot.Annotations>
                    </oxy:Plot>
                </Grid>

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="8,4,8,8"
                    HorizontalAlignment="Center"
                    Text="{Binding MeridianFlipMaxAngleDisplay}" />
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>